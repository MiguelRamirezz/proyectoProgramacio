# ================================
# CONFIGURACIÓN DE BASE DE DATOS
# ================================
DB_URL=jdbc:postgresql://localhost:5432/gellverse
DB_USERNAME=tu_usuario_postgres
DB_PASSWORD=tu_contraseña_postgres

# ================================
# CONFIGURACIÓN JWT
# ================================
# Genera una clave segura con: openssl rand -base64 64
JWT_SECRET=genera_una_clave_segura_aqui

# ================================
# STRIPE (PAGOS)
# ================================
# Obtén tus claves en: https://dashboard.stripe.com/test/apikeys
STRIPE_API_KEY=sk_test_tu_clave_secreta_de_stripe

# ================================
# CONFIGURACIÓN GENERAL
# ================================
# Entorno: dev, test, prod
APP_ENV=dev

# ================================
# CONFIGURACIÓN DE CORREO (opcional)
# ================================
# Descomenta y configura si necesitas envío de correos
# SPRING_MAIL_USERNAME=tu_correo@gmail.com
# SPRING_MAIL_PASSWORD=tu_contraseña_de_app_específica
# SPRING_MAIL_HOST=smtp.gmail.com
# SPRING_MAIL_PORT=587
# SPRING_MAIL_PROPERTIES_MAIL_SMTP_AUTH=true
# SPRING_MAIL_PROPERTIES_MAIL_SMTP_STARTTLS_ENABLE=true

# ================================
# ALMACENAMIENTO
# ================================
# Ruta donde se guardarán los archivos subidos
FILE_UPLOAD_DIR=./uploads/

# ================================
# CORS (Desarrollo)
# ================================
# Orígenes permitidos (separados por comas)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
